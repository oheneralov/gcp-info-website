mixin thumbnail-classic(obj)
  .thumbnail-classic.flex-md-row.flex-lg-column.flex-column(class=obj.modClass ? obj.modClass : '')
    .thumbnail-classic-icon
      span.icon(class=obj.icon_class)=obj.icon_text
    .thumbnail-classic-caption
      h6.thumbnail-classic-title=obj.title
      hr.divider.divider-default.divider-sm
      p.thumbnail-classic-text=obj.text